<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".about_endeavour">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="5dp"
            android:textAlignment="center"
           android:layout_centerHorizontal="true"
            android:id="@+id/title_events"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="About Us"

            android:textSize="32sp" />

    </RelativeLayout>




    <RelativeLayout

        android:id="@+id/layout_main_card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/rec_gradient"
        android:padding="2dp"

        android:elevation="6dp"


        >


        <!--BORDER********-->
        <FrameLayout
            android:background="@drawable/card_boarder"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"/>

        <!--BORDER_END********-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:id="@+id/layout01"
            >
            <TextView
                android:textColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Endeavour is an annual\nTechno_Entrepreneurial Summit of\nKIET,Ghaziabad."
                android:textSize="20sp"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    >
            <TextView
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="normal"
                android:padding="8dp"
                android:text="@string/about_end"
                android:textSize="20sp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>