<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard"
    android:orientation="vertical"
    android:background="@drawable/back_main"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:elevation="6dp"
            android:id="@+id/image_power"
            android:layout_width="48dp"
            android:layout_alignParentTop="true"
            android:layout_height="48dp"
            android:paddingStart="10dp"
            android:paddingEnd="2dp"
            android:paddingTop="10dp"
            android:src="@drawable/power"/>
    <ImageView
        android:elevation="6dp"
        android:id="@+id/image_power1"
        android:layout_width="50dp"
        android:layout_toRightOf="@id/image_power"
        android:layout_height="48dp"
        android:paddingTop="10dp"

        android:src="@drawable/kiet_logo"/>
    <ImageView
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="48dp"
        android:layout_toRightOf="@id/image_power1"
        android:paddingTop="10dp"
        android:id="@+id/i"
        android:src="@drawable/tbi"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_notification_btn"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:elevation="6dp"
            android:id="@+id/ecell"
            android:paddingTop="10dp"
            android:src="@drawable/ecell" />

        <ImageView
            android:elevation="6dp"
            android:id="@+id/iv_notification_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_notifications_black_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <ImageView
            android:elevation="10dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/badge_notifications"
            android:id="@+id/notificationbadge"
            android:layout_marginLeft="-30dp"
            android:layout_alignTop="@+id/iv_notification_btn"
            android:layout_toRightOf="@+id/iv_notification_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/dash_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_above="@id/layout_bottom_menu"
        android:layout_centerHorizontal="true"
        android:src="@drawable/typologoend"/>


    <LinearLayout
        android:id="@+id/layout_bottom_menu"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_menu">

        <LinearLayout
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/layout_events"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/bg_item01"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                <RelativeLayout
              android:layout_width="match_parent"
             android:layout_height="match_parent"

                >
                    <ImageView
                        android:layout_centerHorizontal="true"
                       android:id="@+id/events_img"
                        android:layout_width="68dp"
                        android:layout_height="80dp"
                        android:src="@drawable/event"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Events"
                        android:layout_centerHorizontal="true"
                        android:textSize="17sp"
                        android:textColor="#000"
                        android:layout_below="@id/events_img"/>
                </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/layout_shedule"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/bg_item02"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/events_img1"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:src="@drawable/schedule"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Schedule"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_below="@id/events_img1"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/layout_speakers"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/bg_item03"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/events_img2"
                            android:layout_width="68dp"
                            android:layout_height="80dp"
                            android:src="@drawable/speaker_1"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Speakers"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_below="@id/events_img2"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/layout_sponsors"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:elevation="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_item04"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/events_img3"
                            android:layout_width="60dp"
                            android:layout_height="80dp"
                            android:src="@drawable/sponsors"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sponsors"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_below="@id/events_img3"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:id="@+id/layout_ourteam"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:elevation="6dp"
                    android:background="@drawable/bg_item05"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/events_img4"
                            android:layout_width="68dp"
                            android:layout_height="80dp"
                            android:src="@drawable/team_1"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_below="@id/events_img4"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/layout_faq"
                    android:elevation="6dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_item06"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/events_img5"
                            android:layout_width="68dp"
                            android:layout_height="80dp"
                            android:src="@drawable/contactus2"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Us"
                            android:layout_centerHorizontal="true"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:layout_below="@id/events_img5"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>