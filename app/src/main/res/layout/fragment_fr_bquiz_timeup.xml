<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BQuiz.fr_bquiz_timeup"
    android:gravity="center">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageviewoftime"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_timer_off_black_24dp" />

        <TextView
            android:id="@+id/timeouttext"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@+id/imageviewoftime"
            android:text="Time Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/gotoresults"
            android:layout_below="@+id/timeouttext"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:elevation="6dp"
            android:background="@drawable/radio_flat_selected"
            android:textColor="#fff"
            android:text="NEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>