<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:id="@+id/cardlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:background="#fff"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout_expander"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp">

                    <ImageView
                        android:id="@+id/schedule_event_image"
                        android:scaleType="centerCrop"
                        android:src="@drawable/a0022"
                        android:layout_width="150dp"
                        android:layout_height="150dp"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:id="@+id/title_ev_sh"
                    android:layout_marginTop="10dp"
                    android:textColor="#808080"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"/>
                <TextView
                    android:fontFamily="@font/nunito"
                    android:textSize="15sp"
                    android:id="@+id/venue_ev_sh"
                    android:layout_below="@+id/title_ev_sh"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#808080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venue"/>
                <TextView
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito"
                    android:textSize="15sp"
                    android:id="@+id/time_ev_sh"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/venue_ev_sh"
                    android:textColor="#808080"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearlayout_expandable"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc_sh_tv"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELLO this is short description about event going on campus...."/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/desc_sh_tv"
                    android:id="@+id/tv_go_to_events"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="viewEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go To Event..."/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>