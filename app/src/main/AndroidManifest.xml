            android:name="com.ritik.ecell.Forgotpass_Success"
            android:theme="@style/AppTheme.Popupstyle" />
        <activity
            android:name="com.ritik.ecell.Login_Failed"
            android:theme="@style/AppTheme.Popupstyle" />
        <activity
            android:name="com.ritik.ecell.Reg_Fail"
